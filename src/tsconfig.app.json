{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "module": "es2015",
    "baseUrl": "./",
    "paths": {
      "@shared": ["app/shared"],
      "@shared/*": ["app/shared/*"],
      "@core": ["app/core/"],
      "@core/*": ["app/core/*"],
      "@layout": ["app/layout"],
      "@layout/*": ["app/layout/*"],
      "@routes": ["app/routes"],
      "@routes/*": ["app/routes/*"]
    },
    "types": []
  },
  "exclude": [
    "**/*.spec.ts"
  ]
}
